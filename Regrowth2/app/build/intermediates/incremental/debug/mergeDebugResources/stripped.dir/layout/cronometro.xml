<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/back1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/green1"
    />
    <TextView
            android:id="@+id/Name"
            android:text="@string/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/back2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/redondo"
    />
    <ImageView
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_1__1_"
            app:layout_constraintBottom_toBottomOf="@id/back2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <ImageView
            android:id="@+id/relogio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@id/guide"
            app:layout_constraintBottom_toBottomOf="@id/guide"
            android:layout_marginBottom="@dimen/gdmargin_bottom"
            android:src="@drawable/historia_1"
            android:layout_marginLeft="@dimen/margin_top"
            android:contentDescription="navigation to crono"
            android:clickable="true"
            android:onClick="Cronometro"
    />

    <ImageView
            android:id="@+id/task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/relogio"
            app:layout_constraintEnd_toStartOf="@id/tree"
            app:layout_constraintBottom_toBottomOf="@id/relogio"
            android:src="@drawable/shopping_list_1"

            android:contentDescription="navigation to main"
            android:clickable="true"
            android:onClick="main"
    />

    <ImageView
            android:id="@+id/tree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/relogio"
            app:layout_constraintEnd_toEndOf="@id/guide"
            android:src="@drawable/pine_tree_1"
            android:contentDescription="navigation to tree"
            android:layout_marginRight="@dimen/margin_top"
            android:clickable="true"
            android:onClick="tree"
    />

    <ImageButton
            android:id="@+id/Btn_cronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:src="@drawable/relogiorelogin"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back2"
            android:clickable="true"
    />
    <Button
            android:id="@+id/Btn_Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back2"
            app:layout_constraintBottom_toTopOf="@id/img_cima"
            app:layout_constraintStart_toEndOf="@id/Btn_cronometro"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/green1"
            android:backgroundTint="@color/green3"
            android:text="Pause"
    />
    <Button
            android:id="@+id/Btn_Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back2"
            app:layout_constraintBottom_toTopOf="@id/img_cima"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Btn_cronometro"
            android:textColor="@color/green1"
            android:backgroundTint="@color/green3"
            android:text="Reset"
    />
   <TextView
           android:id="@+id/point"
           android:text=""
           android:textSize="40dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/Btn_cronometro"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toTopOf="@id/img_cima"
   />
    <ImageView
            android:id="@+id/img_cima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintTop_toBottomOf="@id/point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/countdown_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:inputType="number"
            android:text="@string/countdown_Min"
            app:layout_constraintEnd_toStartOf="@id/point"
            app:layout_constraintTop_toBottomOf="@id/Btn_cronometro"
            app:layout_constraintBottom_toTopOf="@id/img_cima"
            android:maxLength="2"
    />

    <TextView
            android:id="@+id/txt_teste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="@string/teste"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/green1"
            android:background="@color/green3"
            app:layout_constraintBottom_toTopOf="@+id/back2"
         />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="min"
            app:layout_constraintStart_toEndOf="@id/point"
            app:layout_constraintTop_toBottomOf="@id/Btn_cronometro"
            app:layout_constraintBottom_toTopOf="@id/img_cima"
    />
    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_cima"
            app:layout_constraintBottom_toTopOf="@+id/guide"

    />

</androidx.constraintlayout.widget.ConstraintLayout>